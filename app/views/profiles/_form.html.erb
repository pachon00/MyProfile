<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class='sub-container'>
<div class='well bs-component'>
  <div class="form-group">
     <%= f.label :avatar, class: 'col-lg-2 control-label' %>
    <div class="col-sm-10">
     <%= f.file_field :avatar%>
   </div>
  </div>

  <div class="form-group">
    <%= f.label :first_name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :first_name, class: 'col-sm-10' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-10">
      <%= f.text_field :last_name, class: 'col-sm-10' %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :summary, class: 'col-lg-2 control-label'  %>
    <div class="col-sm-10">
      <%= f.text_area :summary, class: 'col-sm-10' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone, class: 'col-lg-2 control-label'  %>
    <div class="col-sm-10">
      <%= f.text_field :phone, class: 'col-sm-10' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :cell_phone, class: 'col-lg-2 control-label'  %>
    <div class="col-sm-10">
      <%= f.text_field :cell_phone, class: 'col-sm-10' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: 'col-lg-2 control-label'  %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: 'col-sm-10' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :city, class: 'col-lg-2 control-label'  %>
    <div class="col-sm-10">
      <%= f.text_field :city , class: 'col-sm-10'%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estate, class: 'col-lg-2 control-label'  %>
    <div class="col-sm-10">
      <%= f.text_field :estate , class: 'col-sm-10'%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :birthday, class: 'col-lg-2 control-label'  %>
    <%= f.date_select :birthday, start_year: 1900, end_year: 2000 %>
  </div>
<h2>Works</h2>
  <%= f.fields_for :works do | work | %>
  <div class="works_fields" >
    <div class="fields">
    <%= work.label :company, class: 'col-lg-2 control-label' %> 
    <%= work.text_field :company %><br>
    <%= work.label :roles, class: 'col-lg-2 control-label' %>
    <%= work.text_field :roles %><br>
    <%= work.label :start_date, class: 'col-lg-2 control-label' %>
    <%= work.date_select :start_date %><br>
    <%= work.label :end_date, class: 'col-lg-2 control-label' %>
    <%= work.date_select :end_date %><br>
    <%= work.label :tasks, class: 'col-lg-2 control-label' %>
    <%= work.text_area :tasks %><br>
    </div>
  </div>
  <%end%>

<h2>Trainings</h2>
  <%= f.fields_for :trainings do | training | %>
  <div class="trainings_fields" >
    <div class="fields">
    <%= training.label :name, class: 'col-lg-2 control-label' %>   
    <%= training.text_field :name %><br>
    <%= training.label :porcent, class: 'col-lg-2 control-label' %> 
    <%= training.number_field :porcent %><br>
    <%= training.label :start_date, class: 'col-lg-2 control-label' %>
    <%= training.date_select :start_date %><br>
    <%= training.label :end_date, class: 'col-lg-2 control-label' %>
    <%= training.date_select :end_date %><br>
    <%= training.label :level, class: 'col-lg-2 control-label' %> 
    <%= training.text_field :level %><br>
    </div>
  </div>
  <%end%>

<h2>Academics</h2>
  <%= f.fields_for :academics do |academic| %>
  <div class="academics_fields" >
    <div class="fields">
      <%= academic.label :name, class: 'col-lg-2 control-label' %> 
      <%= academic.text_field :name %><br>
      <%= academic.label :location, class: 'col-lg-2 control-label' %> 
      <%= academic.text_field :location %><br>
      <%= academic.label :grade, class: 'col-lg-2 control-label' %> 
      <%= academic.text_field :grade %><br>
      <%= academic.label :start_date,  class: 'col-lg-2 control-label' %> 
      <%= academic.date_select :start_date %><br>
      <%= academic.label :end_date, class: 'col-lg-2 control-label' %> 
      <%= academic.date_select :end_date %><br>
    </div>
  </div>
  <%end%>
<h2>Languages</h2>
  <%= f.fields_for :languages do |language| %>
  <div class="academics_fields" >
    <div class="fields">
      <%= language.label :name, class: 'col-lg-2 control-label' %> 
      <%= language.text_field :name %><br>
      <%= language.label :porcent, class: 'col-lg-2 control-label' %> 
      <%= language.number_field :porcent %><br>
    </div>
  </div>
  <%end%>
  <div class="actions">
    <%= f.submit %>
  </div>
  <%end%>
</div>
