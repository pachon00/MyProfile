<%= form_for(@training) do |f| %>
  <% if @training.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@training.errors.count, "error") %> prohibited this training from being saved:</h2>

      <ul>
      <% @training.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class='sub-container'>
  <div class='well bs-component'>
    <div class="form-group">
      <%= f.label :name, class: 'col-lg-2 control-label' %>
      <%= f.text_field :name %><br>
      <%= f.label :porcent, class: 'col-lg-2 control-label' %>
      <%= f.number_field :porcent %><br>
      <%= f.label :start_date, class: 'col-lg-2 control-label' %>
      <%= f.date_select :start_date, start_year: 1900 %><br>
      <%= f.label :end_date, class: 'col-lg-2 control-label' %>
      <%= f.date_select :end_date, start_year: 1900 %><br>
      <%= f.label :level, class: 'col-lg-2 control-label' %>
      <%= f.text_field :level %><br>
    </div>
    
    <div class="form-group">
      <%= f.submit %>
    </div>
  </div>
  <% end %>
</div>